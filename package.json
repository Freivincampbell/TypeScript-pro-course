{
  "name": "typescript-pro-library-project",
  "version": "0.0.1",
  "main": "build/index.umd.js",
  "files": [
    "build"
  ],
  "repository": "https://github.com/Freivincampbell/TypeScript-pro-course",
  "author": "Freivin Campbell <freivin12@gmail.com>",
  "license": "MIT",
  "scripts": {
    "test": "jest",
    "test:watch": "npm test -- --watch",
    "prebuild": "rm -rf dist && rm -rf build",
    "build": "tsc -p tsconfig.json && rollup -c rollup.config.js",
    "postbuild": "cp dist/*.d.ts build/",
    "precommit": "npm test && lint-staged"
  },
  "dependencies": {
    "typescript": "^4.2.4"
  },
  "devDependencies": {
    "@types/jest": "^26.0.23",
    "@types/node": "^15.0.3",
    "husky": "^6.0.0",
    "jest": "^26.6.3",
    "lint-staged": "^11.0.0",
    "prettier": "^2.3.0",
    "rollup": "^2.48.0",
    "rollup-plugin-sourcemaps": "^0.6.3",
    "ts-jest": "^26.5.6",
    "typescript": "^4.2.4"
  },
  "jest": {
    "transform": {
      ".ts": "<rootDir>/node_modules/ts-jest/preprocessor.js"
    },
    "testRegex": ".*\\.spec\\.ts$",
    "moduleFileExtensions": [
      "ts",
      "js"
    ],
    "collectCoverage": true,
    "collectCoverageFrom": [
      "src/**/*.ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 100,
        "functions": 100,
        "lines": 100,
        "statements": 100
      }
    }
},
  "lint-staged": {
    "src/**/*.ts": [
      "prettier --write --no-semi --bracket-spacing --single-quote --trailing-comma --use-tabs ES2020",
      "git add"
    ]
  }
}
